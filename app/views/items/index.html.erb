<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Duration</th>
      <th>Hidden</th>
      <th>Teaser</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.body %></td>
        <td><%= item.duration %></td>
        <td><%= item.hidden %></td>
        <td><%= item.teaser %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

